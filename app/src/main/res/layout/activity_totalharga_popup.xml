<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              app:behavior_hideable="false"
              app:behavior_peekHeight="80dp"
              android:padding="6dp"
              tools:context="id.zcode.android.nusago.Totalharga_popup">

    <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/popshape"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="horizontal">

        <ImageView
                android:id="@+id/ivTextDrawable"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/img_toko"
        />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:orientation="vertical">


                <TextView
                        android:id="@+id/txtStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="20"
                        android:text="Toko Berkah Sentosa"
                        android:textColor="#697E91"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                <TextView
                        android:id="@+id/txtStoreAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLength="100"
                        android:text="Jln. Sukabumi Utara no. 21"
                        android:textColor="#BFC5CA"
                        android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/nmtgl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLength="20"
                        android:text="Tanggal"
                        android:textColor="#BFC5CA"
                        android:textSize="10sp"/>

                <TextView
                        android:id="@+id/txtDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLength="100"
                        android:text="13 Okt 2019"
                        android:textColor="#697E91"
                        android:textSize="12sp"
                        android:textStyle="bold"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="1sp"
            android:background="#FFE8E9EA"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:orientation="vertical"
                    android:layout_height="200dp"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_width="fill_parent">

        <ScrollView
                android:id="@+id/ScrollView01"
                android:layout_height="300dp"
                android:padding="14dp"
                android:layout_marginBottom="30dp"
                android:background="#f4f4f4"
                android:layout_width="350dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:paddingRight="8dp"
                        android:orientation="vertical">


                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLength="20"
                            android:text="Nama Barang"
                            android:textColor="#697E91"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:maxLength="100"
                            android:text="1. Beras 5Kg"
                            android:textColor="#BFC5CA"
                            android:textSize="12sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:maxLength="100"
                            android:text="2. Kecap 300ml"
                            android:textColor="#BFC5CA"
                            android:textSize="12sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:maxLength="100"
                            android:text="3. Minyak Goreng"
                            android:textColor="#BFC5CA"
                            android:textSize="12sp"/>
                </LinearLayout>

                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:ellipsize="end"
                            android:maxLength="100"
                            android:text="Harga"
                            android:textColor="#697E91"
                            android:textSize="12sp"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLength="20"
                            android:text="Rp. 125.000,-"
                            android:textColor="#BFC5CA"
                            android:textSize="12sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLength="20"
                            android:text="Rp. 125.000,-"
                            android:textColor="#BFC5CA"
                            android:textSize="12sp"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLength="20"
                            android:text="Rp. 125.000,-"
                            android:textColor="#BFC5CA"
                            android:textSize="12sp"/>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/dashed_border"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="50dp"
                android:layout_gravity="center"
                android:background="@drawable/cart"
        />

        <LinearLayout
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="#697E91"
                    android:textSize="14sp"
                    android:maxLength="20"
                    android:ellipsize="end"
                    android:text="Total Belanja Anda"/>

            <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/textView"
                    android:layout_alignBottom="@+id/imageView3"
                    android:text="Rp 850.000"
                    android:textSize="28sp"
                    android:textColor="#00b0f2"
                    android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


