<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:layout_gravity="bottom"
              app:behavior_hideable="false"
              app:behavior_peekHeight="80dp"
              app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
              android:background="@drawable/gradient_nusago"
              android:padding="6dp">


    <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/popshape"/>

    <ImageView
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:src="@drawable/hp_barcode"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tunjukan Barcode ini ke Kasir"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>


    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:src="@drawable/shape_barcode_saya"/>


        <ImageView
                android:id="@+id/imgBarcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/barcode"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="Barcode Saya"
                android:textSize="24sp"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/txtPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgBarcode"
                android:layout_marginTop="10dp"
                android:text="89878788686"
                android:layout_centerHorizontal="true"
                android:textSize="14sp"/>

    </RelativeLayout>


</LinearLayout>